# Public client-side
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Server-side secrets
SUPABASE_SERVICE_ROLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_PRICE_BASIC=
STRIPE_PRICE_PLUS=
STRIPE_PRICE_PREMIUM=
STRIPE_WEBHOOK_SECRET=
APP_URL=

# AI providers (pick one; comment the other)
SONOMA_PROVIDER=openai
OPENAI_API_KEY=
# SONOMA_OPENAI_MODEL=
# OPENAI_MODEL=

# SONOMA_PROVIDER=anthropic
# ANTHROPIC_API_KEY=
# ANTHROPIC_MODEL=
# ANTHROPIC_MODEL_FALLBACK=
# ANTHROPIC_VERSION=2023-06-01

# Google TTS (prefer inline JSON on Vercel)
# GOOGLE_TTS_CREDENTIALS={ ... service account json ... }
# GOOGLE_APPLICATION_CREDENTIALS=google-tts-key.json

# Admin endpoints (leave disabled by default)
ADMIN_API_ENABLED=false
# ADMIN_API_TOKEN=
# Copy this file to .env.local and fill in the secrets

# Primary LLM provider
SONOMA_PROVIDER=anthropic
# Preview model (override if Anthropic changes the id)
SONOMA_MODEL=claude-4.1-opus
# Fallback OpenAI model when SONOMA_PROVIDER=openai or Anthropic unavailable
SONOMA_OPENAI_MODEL=gpt-4o

# API keys (set at least one provider)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Prompt verbosity: compact | full
SONOMA_PROMPT_MODE=compact

# Google Cloud Text-to-Speech (choose one method)
# Option A: Inline credentials JSON (stringified or base64)
# GOOGLE_TTS_CREDENTIALS=
# Option B: Path to service account JSON file
# GOOGLE_APPLICATION_CREDENTIALS=google-tts-key.json
