    {
      "term": "variable",
      "definition": "A letter or symbol that represents an unknown number"
    },
    {
      "term": "coefficient",
      "definition": "The number that multiplies a variable in an algebraic expression"
    },
    {
      "term": "term",
      "definition": "A single number, variable, or product of numbers and variables"
    },
    {
      "term": "evaluate",
      "definition": "To find the value of an expression by substituting numbers for variables"
    }
  ],
