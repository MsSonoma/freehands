    {
      "term": "dependent clause",
      "definition": "A group of words that cannot stand alone as a sentence"
    },
    {
      "term": "subordinating conjunction",
      "definition": "A word that connects a dependent clause to an independent clause"
    },
    {
      "term": "fragment",
      "definition": "An incomplete sentence missing a subject or predicate"
    }
